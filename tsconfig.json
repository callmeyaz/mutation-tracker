{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ES2022",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./dist/types"
  },
  "exclude": [
    "./node_modules/**/*",
    "./dist/**/*",
    "tests/test-bed.ts"
  ]
}